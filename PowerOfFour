class Solution {
    public boolean isPowerOfFour(int n) 
    {
       for (int i = 0; i < 31; i++) 
       {
            int ans = (int) Math.pow(4, i);
            if (ans == n && n!=Integer.MAX_VALUE) 
            {
                return true;
            }
        }
        return false;
        
    }
}
